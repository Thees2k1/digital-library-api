# Use pnpm as the default package manager
package-manager=pnpm

# Set registry (default npm registry, or GitHub Packages, etc.)
registry=https://registry.npmjs.org/

# Custom cache directory to store pnpm packages
store-dir=/tmp/pnpm-store

# Install only production dependencies
production=${NODE_ENV}

# Disable package-lock file (useful for pnpm, but optional)
lockfile=false

# Set maximum workers for pnpm (to speed up installation)
pnpm-max-workers=4
